{
  "name": "twitter-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "eslint": "eslint \"src/**/*.js\"",
    "format": "prettier-eslint \"src/**/*.js\" \"src/**/*.scss\" --write --trailing-comma es5",
    "dev": "cross-env NODE_PATH=./src babel-watch src/server/server.js -x .reactful.json",
    "webpack": "webpack -wd",
    "start": "concurrently \"yarn run webpack\" \"yarn run dev\"",
    "test": "jest",
    "verify-tests": "jest --coverage",
    "build-react": "cross-env NODE_ENV=production webpack --progress -p",
    "build-node": "babel src -d build --copy-files",
    "build": "yarn install && yarn run build-react && yarn run build-node",
    "prod": "cross-env NODE_ENV=production NODE_PATH=./build pm2 start -i max build/server/server.js --update-env --name twitter-cloneProd",
    "prod-stop": "pm2 stop twitter-cloneProd",
    "prod-reload": "pm2 reload --update-env twitter-cloneProd",
    "prod-logs": "pm2 logs twitter-cloneProd",
    "_reactful_commands": "_reactful_commands"
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-2"
    ]
  },
  "jest": {
    "modulePaths": [
      "./src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.18.2",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "pm2": "^2.9.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.6",
    "serialize-javascript": "^1.4.0",
    "shortid": "^2.2.8",
    "style-loader": "^0.20.1",
    "webpack": "^3.11.0",
    "webpack-chunk-hash": "^0.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-watch": "^2.0.7",
    "concurrently": "^3.5.1",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.2.2",
    "prettier-eslint-cli": "^4.7.0",
    "react-test-renderer": "^16.2.0",
    "reactful-commands": "^0.5.1"
  }
}
